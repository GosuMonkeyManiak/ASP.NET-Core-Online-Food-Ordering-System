@model IEnumerable<DishCategoryListingModel>

@{
    ViewData[Title] = "All categories";
}

<partial name="_ErrorMessagePartial"/>

<div class="row">
    <div class="offset-3 col-5">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Dishes in category</th>
                <th scope="col">Operations</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Title</td>
                    <td>@category.Count</td>
                    <td>
                        <a asp-area="Restaurant" asp-controller="DishCategory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a> |
                        <a asp-area="Restaurant" asp-controller="DishCategory" asp-action="Disable" asp-route-id="@category.Id" class="btn btn-danger @(category.IsDisable ? "disabled" : "")">Disable</a> |
                        <a asp-area="Restaurant" asp-controller="DishCategory" asp-action="Enable" asp-route-id="@category.Id" class="btn btn-success @(category.IsDisable ? "" : "disabled")">Enable</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>