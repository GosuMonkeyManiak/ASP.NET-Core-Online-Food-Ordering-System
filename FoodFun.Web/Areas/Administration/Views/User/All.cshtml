@model UserSearchModel

@{
    ViewData[Title] = "All Users";
}

<partial name="_ErrorMessagePartial"/>

<div class="row">
    <div class="offset-2 col-8">
        <form method="get" class="form-inline">
            <div class="input-group">
                <div class="form-outline me-3">
                    <input asp-for="SearchTerm" class="form-control" placeholder="Search"/>
                </div>

                <button type="submit" class="btn btn-primary rounded me-3">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </form>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Operations</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-area="Administration" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
