@model IEnumerable<ProductServiceModel>

@{
    ViewData[Title] = "All";
}

@if (TempData[nameof(ProductNotExist)] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData[nameof(ProductNotExist)]
    </div>
}

@if (TempData[nameof(ProductCategoryNotExist)] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData[nameof(ProductCategoryNotExist)]
    </div>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-xl-3">
            <div class="card text-center" style="width: 18rem;">
                <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name - (@product.Category.Title)">
                <div class="card-body">
                    <h5 class="card-title">@product.Name - (@product.Category.Title)</h5>
                    <p class="card-text">@product.Price $</p>
                    <p class="card-text">@product.Description</p>
                    <partial name="_PermissionsByRolesForAllProductsPartial" model="@product.Id"/>
                </div>
            </div>
        </div>
    }
</div>