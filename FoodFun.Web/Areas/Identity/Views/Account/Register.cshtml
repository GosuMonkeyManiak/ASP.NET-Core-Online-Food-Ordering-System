@model RegisterFormModel

@{
    ViewData[Title] = "Register";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center text-dark mt-5">@ViewData[Title]</h2>

        <div class="card my-5">

            <form method="post" class="card-body cardbody-color p-lg-5">

                <div class="text-center">
                    <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px" alt="profile">
                </div>

                <div class="mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Username">
                </div>
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                </div>
                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                </div>
                <div class="mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                </div>
                
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="text-center">
                    <button type="submit" class="btn btn-color px-5 mb-5 w-100">@ViewData[Title]</button>
                </div>
                <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                    Login -> <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="text-dark fw-bold">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    
    @if (ViewData[nameof(AccountExist)] != null)
    {
        <script>
            window.onload = function() {
                alert('@ViewData[nameof(AccountExist)]');
            }
        </script>
    }
}